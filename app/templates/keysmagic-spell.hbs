{{page-title "Spell: " (undash this.model.name)}}
<h1>Spell: {{undash this.model.name}}</h1>

<div class="row wiki-breadcrumbs">
    <div class="col col-xs-10">
      <span class="wiki-breadcrumb">
        <a href="/">Home</a>
        <i class="fas fa-angle-double-right" aria-hidden="true"></i>
        <a href="/magic">Magic</a>
        <i class="fas fa-angle-double-right" aria-hidden="true"></i>
        Spell: {{undash this.model.name}}
      </span>
    </div>

    <div class="col col-xs-2">
        <a href="#bottom"><i class="fas fa-angle-double-down" aria-hidden="true"></i> Jump to End</a>
    </div>
</div>

<div class="spellstyle">
  <div class="aspect">
    {{#each-in this.model.category as |cat data|}}
      <img src="/game/uploads/wiki/{{data.icon}}" alt="Category: {{cat}}">
    {{/each-in}}
  </div>
  <div class="checks">Checks:</div><div class="dice">
    {{#unless this.model.spell.offense.only}}
      {{#if this.model.spell.noroll}}
        None
      {{else}}
        {{#each-in this.model.category as |cat data|}}
          <span>
            {{#if this.model.spell.attribute}}
              {{this.model.spell.attribute}}
            {{else}}
              {{data.attribute}}
            {{/if}} + {{#if this.model.spell.ability}}
              {{this.model.spell.ability~}}
            {{else}}
              {{cat~}}
            {{/if}}</span>
        {{~/each-in}}{{#if this.model.spell.offense}}{{#unless this.model.spell.offense.only}};{{/unless}}{{/if}}<br/>
      {{/if}}
    {{/unless}}
    {{#if this.model.spell.offense}}
      {{this.model.spell.offense.attribute}} + {{this.model.spell.offense.ability}} vs.<br/>
      {{this.model.spell.defense.attribute}} + {{this.model.spell.defense.ability}}
    {{/if}}
  </div>
  {{#if this.model.spell.fs3}}
    <div class="checks">FS3:</div><div class="dice">{{this.model.spell.fs3}}</div>
  {{/if}}
</div>
<AnsiFormat @text={{this.model.spell.desc.full}} />
<div class="image-container center">
  <img src="/game/uploads/spellpix/{{this.model.pic}}">
</div>

<div class="action-buttons">
  <a name="bottom"></a>
  <p><a href="#top"><i class="fas fa-angle-double-up"></i> Jump to Top</a></p>
</div>
