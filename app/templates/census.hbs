{{page-title "Census"}}
<h1>All Characters</h1>

<CensusNav @types={{this.model.types}} />

<div class="table-responsive">

<table class="table table-striped census">
  <thead>
      <th></th>
      {{#each this.model.census.titles as |title|}}	  
        {{#if @first}}
		{{else}}
          <th>{{title}}</th>		  
        {{/if}}
      {{/each}}
  </thead>
  
  <tbody>
    {{#each this.model.census.chars as |char| }}
    <tr>
      {{#each-in char as |field value| }}  
        {{#if @first}}
		{{else}}
          <td>
            {{#if (eq field 'char')}}
              <CharIconInline @char={{value}} />
            {{else}}
              {{value}}
            {{/if}}
          </td>	  
        {{/if}}
      {{/each-in}}
    </tr>
    {{/each}}
  </tbody>

</table>

</div>

{{outlet}}