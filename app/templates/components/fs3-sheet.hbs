<div class="row">
  <div class="col col-md-6 col-sm-12">

    <Fs3AbilityTable @title="Attributes" @list={{this.char.fs3.attributes}} @max={{4}} @showSpecs={{false}} />

  </div>

  <div class="col col-md-6 col-sm-12">

    <Fs3AbilityTable @title="Action Skills" @list={{this.char.fs3.action_skills}} @max={{8}} @showSpecs={{true}} />

  </div>
</div>

<div class="row">
  <div class="col col-md-6 col-sm-12">
    <Fs3AbilityTable @title="Background Skills" @list={{this.char.fs3.backgrounds}} @max={{3}} />
  </div>

  <div class="col col-md-6 col-sm-12">

    <Fs3AbilityTable @title="Languages" @list={{this.char.fs3.languages}} @max={{3}} />

  </div>
</div>

{{#if (and this.char.fs3.use_advantages this.char.fs3.advantages)}}
<div class="row">
  <div class="col col-md-6 col-sm-12">

    <Fs3AbilityTable @title="Advantages" @list={{this.char.fs3.advantages}} @max={{3}} />

  </div>
</div>

{{/if}}


<div class="row">
  <div class="col col-md-6 col-sm-12">
    <br>
    <b>Luck Points:</b> {{this.char.fs3.luck_points}} {{#if (and (gte this.char.fs3.luck_points 5) this.char.fs3.xp)}}<i class="fad fa-share-square" {{action (mut this.luckConfirm) true}}></i>{{/if}}
  </div>
</div>

{{#if this.luckConfirm}}
<BsModalSimple @title="Convert Luck?" @closeTitle="No" @submitTitle="Yes" @size={{null}} @fade={{true}} @position="center" @open={{this.luckConfirm}} @onSubmit={{action "tradeLuck"}} @onHide={{action (mut this.luckConfirm) false}}>
   Convert 5 Luck points into 1 XP?
   <FlashMessages />
</BsModalSimple>
{{/if}}
