  <div class="spell-list">
    {{#each-in this.sortedSpells as |cat spelllist|}}
      <h3 class="spellheader-{{cat}}">{{cat}}</h3>
      {{#each-in spelllist as |spell data|}}
        <div class="spell-known">
          <a href="/spell/{{pagecase spell}}" target="_blank">{{spell}}:</a>
          <div class="spell-data">
            <span class="spell-roll">{{data.roll}}</span>
            {{#if data.fs3}}
              <span class="spell-fs3">{{data.fs3}}</span>
            {{/if}}
            {{#if data.offense}}
              <span class="spell-vs">{{data.offense}} vs {{data.defense}}</span>
            {{/if}}
            {{#if data.special}}
              <span class="spell-special">{{{data.special}}}</span>
            {{/if}}
            {{#if data.note}}
              <span class="spell-note">{{{data.note}}}.
                {{#if this.xp}}
                  <CharSpellsNote @char={{this.char}} @spell={{spell}} @note={{data.note}} @spells={{this.spells}} @spellnotes={{this.spellnotes}} @category={{cat}} @noteSet={{action "reloadChar"}}/>
                {{/if}}
              </span>
            {{/if}}
          </div>
        </div>
      {{/each-in}}
    {{/each-in}}
  </div>
  {{#if this.xp}}
  <CharSpellsLearn  @char={{this.char}} @spells={{this.spells}} @spellnotes={{this.spellnotes}} @skills={{this.skills}} @learn={{this.learn}} @spellLearned={{action "reloadChar"}}/>
  {{/if}}
